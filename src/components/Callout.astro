---
const { title = "Note", children } = Astro.props as { title?: string; children?: any };
---
<div style="border:1px solid #ddd; background:#fafafa; padding:0.75rem 1rem; border-radius:0.5rem; margin:1rem 0;">
  <strong>{title}:</strong>
  <div style="margin-top:0.25rem;">
    <slot />
  </div>
</div>
